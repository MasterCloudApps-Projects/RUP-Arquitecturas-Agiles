@model ShareThings.Models.BorrowCommonViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Borrow</h4>
<hr />

<div class="row">
    <div class="col-md-8">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Borrow.ProductId" value="@ViewData["idProduct"]" />
            <input type="hidden" asp-for="Borrow.ProductStart" value="@ViewData["productStart"]" />
            <input type="hidden" asp-for="Borrow.ProductEnd" value="@ViewData["productEnd"]" />
            <div class="form-group">
                <div class="row">
                    <div class="col-md-2">
                        Product Start Date:
                    </div>
                    <div class="col-md-4">
                        @ViewData["productStart"]
                    </div>
                    <div class="col-sm-2">
                        Product End Date:
                    </div>
                    <div class="col-md-4">
                        @ViewData["productEnd"]
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-2">
                        Availability:
                    </div>
                    <div class="col-md-5">
                        <label asp-for="Borrow.Start"></label>
                        <input asp-for="Borrow.Start" class="form-control" />
                        <span asp-validation-for="Borrow.Start" class="text-danger"></span>
                    </div>
                    <div class="col-md-5">
                        <label asp-for="Borrow.End"></label>
                        <input asp-for="Borrow.End" class="form-control" />
                        <span asp-validation-for="Borrow.End" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

