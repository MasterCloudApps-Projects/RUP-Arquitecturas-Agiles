@model ShareThings.Models.BorrowCommonViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Borrow</h4>
<hr />
<div class="row">
    <div class="col-md-8">
        <form enctype="multipart/form-data" asp-action="Edit">
            @await Html.PartialAsync("~/Views/Borrows/_BorrowDetail.cshtml")
            <div class="form-group">
                <div class="row">
                    <div class="col-md-2">
                        <strong>Availability:</strong>
                    </div>
                    <div class="col-md-5">
                        <label asp-for="Borrow.Start"></label>
                        <input asp-for="Borrow.Start" class="form-control" />
                        <span asp-validation-for="Borrow.Start" class="text-danger"></span>
                    </div>
                    <div class="col-md-5">
                        <label asp-for="Borrow.End"></label>
                        <input asp-for="Borrow.End" class="form-control" />
                        <span asp-validation-for="Borrow.End" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $("input[name=starRO][value=" + $("#ScoreValue").val() + "]").prop('checked', true);
        $("input[type=starRO]").attr('disabled', false);
        $('noClic').click(false);
    });

</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
